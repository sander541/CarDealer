@model CarDealershipWebApplication.Models.SparePart

@{
    ViewData["Title"] = "AddSpare";
}

<h2>Add Spare Part</h2>

<h4>CarMarkModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddPart">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CarMark.CarMarkID" />
            <div class="form-group">
                <label asp-for="SparePartName" class="control-label"></label>
                <input asp-for="SparePartName" class="form-control" />
                <span asp-validation-for="SparePartName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SparePartCode" class="control-label"></label>
                <input asp-for="SparePartCode" class="form-control" />
                <span asp-validation-for="SparePartCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="AddPart" class="btn btn-default" />
            </div>
        </form>
    </div>

</div>

<div>
    <a asp-action="Modify">Back</a>
</div>

